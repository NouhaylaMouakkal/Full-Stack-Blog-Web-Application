generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id          Int       @id @default(autoincrement())
  email       String    @unique
  password    String
  role        Role      @default(USER)
  articles    Article[] @relation("author")
  comments    Comment[] @relation("author")
}

enum Role {
  ADMIN
  AUTHOR
  USER
}

model Article {
  id            Int        @id @default(autoincrement())
  title         String
  contenu       String?
  image         Bytes?
  createdAt     DateTime
  updatedAt     DateTime   @updatedAt
  published     Boolean
  categories    Category[] @relation("articleCategory")
  author        User       @relation("author", fields: [userId], references: [id])
  userId        Int
  comments      Comment[]  @relation("articleComment")
}

model Category {
  nom         String    @id
  articles    Article[] @relation("articleCategory")
}

model Comment {
  id          Int       @id @default(autoincrement())
  email       String
  contenu     String
  article     Article   @relation("articleComment", fields: [articleId], references: [id])
  articleId   Int
  author      User      @relation("author", fields: [userId], references: [id])
  userId      Int
}
